<%= form_for @recipe do |r| %>
<%= r.label :title %>
  <%= r.text_field :title %><br>

  <%= r.fields_for :ingredients do |ing| %>
    <%= ing.label :name_0 %>
    name: <%= ing.text_field :name_0 %><br>

    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %><br>

  <% end %>

  <%= r.submit %>
<% end %>
